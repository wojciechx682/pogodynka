{% extends 'base.html.twig' %}

{% block title %}Measurement{% endblock %}

{% block body %}
    <h1>Measurement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ measurement.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ measurement.date ? measurement.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Celsius</th>
                <td>{{ measurement.celsius }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ measurement.status }}</td>
            </tr>
            <tr>
                <th>Humidity</th>
                <td>{{ measurement.humidity }}</td>
            </tr>
            <tr>
                <th>Sunrise</th>
                <td>{{ measurement.sunrise ? measurement.sunrise|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Sunset</th>
                <td>{{ measurement.sunset ? measurement.sunset|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Windspeed</th>
                <td>{{ measurement.windspeed }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_measurement_index') }}">back to list</a>

    <a href="{{ path('app_measurement_edit', {'id': measurement.id}) }}">edit</a>

    {{ include('measurement/_delete_form.html.twig') }}
{% endblock %}
